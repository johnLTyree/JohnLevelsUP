import random 
import string
import sys 

def string_generator(size=6, string=string.ascii_letters + string.digits):    
    return ''.join(random.choice(string) for _ in range(size))

number = int(input("Enter the number of EC2 instances needed: ")
if number < 0:
    print("Please enter a number greater than 0: ")
elif number > 0:
    print("Successful")
    
print()
print("--------------------------------")
print("EC2 Instance Names")
print("--------------------------------")
print() 
for _ in range(1, number + 1):    
    unique_name = department    
    EC2_unique_name = unique_name + "-" + string_generator()
    print("Your EC2 Instance's unique name is : ", EC2_unique_name)

department = input("Enter Your Department: Marketing, Accounting, FinOps: ")  

for _ in department:

    if department == "Marketing" or department.lower() == "marketing" :
        print("Marketing Accepted")
        #print ("Marketing")
        break

    elif department == "Accounting" or department.lower() == "accounting" :
        print("Accounting Accepted")
        #print("Accounting")
        break

    elif department == "FinOps" or department.lower() == "finops" :
        print("FinOps Accepeted")
        #print("FinOps")
        break

    else:
        print("Error: You can not continue, please enter the correct department.")
        raise SystemExit
        sys.exit()
        
       


    
